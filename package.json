{
  "name":    "netvest-backend",
  "version": "0.0.0",
  "private":  true,

  "main": "src/",

  "scripts":
  {
    "start": "forever start --uid netv -l \"$PWD/var/netv.forever.log\" --append .",
    "stop":  "forever  stop \"$PWD\"",
    "restart": "npm stop 2> /dev/null || true; npm start",
    "start-node": "node .",

    "dev": "nodemon --ext js,yaml --watch src/ .",

    "st": "eslint src/ run/ db/",

    "knex": "knex --knexfile=db/knexfile.js --env=dev",
    "db-migrate":  "npm run knex -- migrate:latest",
    "db-rollback": "npm run knex -- migrate:rollback"
  },

  "dependencies":
  {
    "forever":
      "^0.15",

    "express":
      "^4.13",

    "knex":
      "0.10",

    "pg":
      "^4.5",

    "fs-sync":
      "^1.0.2",

    "body-parser":
      "^1.15.0",

    "cookie-parser":
      "^1.4.1",

    "express-session":
      "^1.13.0",

    "composable-middleware":
      "^0.3",

    "passport":
      "^0.3.2",

    "passport-local":
      "^1.0.0",

    "promisify-node":
      "^0.1.5",

    "lodash":
      "^4",

    "xregexp":
      "^3.1",

    "console-ultimate":
      "^2.8",

    "rootpath":
      "StreetStrider/rootpath#v1.4.0",

    "swagger-parser":
      "^3.4.1",

    "swagger-tools":
      "0.9"
  },

  "devDependencies":
  {
    "eslint":
      "^2.8",

    "js-outlander":
      "StrangeTransistor/js-outlander#2.0.6",

    "nodemon":
      "^1.9.1",

    "minimist":
      "^1.2",

    "command-promise":
      "^2",

    "swagger":
      "^0.7"
  }
}
